<Window x:Class="RecipeApp.RevertRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Revert Recipe" Height="450" Width="800" Background="GreenYellow">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter the recipe name to revert:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="RecipeNameTextBox" Margin="0,0,0,10"/>
            <Button Content="Revert" Click="Revert_Click" Margin="0,0,0,10" Background="#4CAF50" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
