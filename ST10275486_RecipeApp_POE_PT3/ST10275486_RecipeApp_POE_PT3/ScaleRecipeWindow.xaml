<Window x:Class="RecipeApp.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Enter the recipe name:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="RecipeNameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Enter the scaling factor(0,5 ; 2 or 3):" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="ScalingFactorTextBox" Margin="0,0,0,10"/>
            <Button Content="Scale" Click="Scale_Click" Margin="0,0,0,10" Background="#4CAF50" Foreground="White" FontFamily="Segoe UI" FontSize="14" Padding="5" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
