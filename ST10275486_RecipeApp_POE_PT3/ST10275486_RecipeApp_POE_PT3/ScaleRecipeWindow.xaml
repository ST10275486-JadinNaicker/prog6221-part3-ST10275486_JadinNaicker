<Window x:Class="RecipeApp.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="https://cdn.apartmenttherapy.info/image/upload/f_jpg,q_auto:eco,c_fill,g_auto,w_1500,ar_16:9/k%2Farchive%2F3fa80fedf5d0cada03d359fa428a0fe1c11a2635" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <StackPanel Margin="10" Background="#AAFFFFFF">
            <TextBlock Text="Enter the recipe name:" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="RecipeNameTextBox" Margin="0,0,0,10"/>
            <TextBlock Text="Enter the scaling factor (e.g., 0.5, 2, 3):" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBox Name="ScalingFactorTextBox" Margin="0,0,0,10"/>
            <Button Content="Scale" Click="Scale_Click" Margin="0,0,0,10" Background="#4CAF50" Foreground="White" FontFamily="Segoe UI" FontSize="14" Padding="5" BorderThickness="0" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
