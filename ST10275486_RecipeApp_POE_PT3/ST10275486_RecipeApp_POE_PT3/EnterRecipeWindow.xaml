<Window x:Class="RecipeApp.EnterRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Recipe" Height="450" Width="800" Background="#F0F0F0">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Enter the recipe name:" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333333"/>
            <TextBox Name="RecipeNameTextBox" Margin="0,0,0,20" Padding="10" FontSize="16" Background="WhiteSmoke" BorderBrush="#CCCCCC" BorderThickness="1"/>
            <TextBlock Text="Enter the number of ingredients:" FontSize="18" FontWeight="Bold" Margin="0,0,0,10" Foreground="#333333"/>
            <TextBox Name="NumberOfIngredientsTextBox" Margin="0,0,0,20" Padding="10" FontSize="16" Background="WhiteSmoke" BorderBrush="#CCCCCC" BorderThickness="1"/>
            <Button Content="Next" Click="Next_Click" Margin="0,0,0,10" Padding="15,10" FontSize="16" Background="#4CAF50" Foreground="White"/>
            <Image Source="https://cdn.thewirecutter.com/wp-content/uploads/2019/09/rollingpins-lowres-7740.jpg" Width="544" Height="145"/>
        </StackPanel>
    </Grid>
</Window>
